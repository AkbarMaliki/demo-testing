<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hit_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">hit_res_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//div[@id='about']" position="attributes">
        		<attribute name="invisible">1</attribute>
           	</xpath>
        </field>
   	</record>

   	<template id="web.login_layout" name="Login Layout">
        <t t-call="web.frontend_layout">
            <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
            <t t-set="body_classname" t-value="'bg-100'"/>
            <t t-set="no_header" t-value="True"/>
            <t t-set="no_footer" t-value="True"/>
            <div class="container py-5">
                <div t-attf-class="card border-0 mx-auto bg-100 {{login_card_classes}} o_database_list" style="max-width: 300px;">
                    <div class="card-holder" >
                        <div t-attf-class="text-center pb-3 border-bottom {{'mb-3' if form_small else 'mb-4'}}" style="display:none;">
                            <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}" alt="Logo" style="max-height:120px; max-width: 100%; width:auto"/>
                        </div>
                        <t t-out="0"/>
                        <div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer" style="display:none;">
                            <!--
                            <t t-if="not disable_database_manager">
                                <a class="border-end pe-2 me-1" href="/web/database/manager">Manage Databases</a>
                            </t>
                            <a href="https://www.odoo.com?utm_source=db&amp;utm_medium=auth" target="_blank">Powered by <span>Odoo</span></a>
                        	-->
                        	<!-- <t t-if="not disable_database_manager">
                                <a class="pe-2 me-1" href="/web/database/manager">Manage Databases</a>
                            </t> -->
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

	<template id="web.login" name="Login">
		<t t-call="web.login_layout">
			<div class="login-container">
				<style>
					body {
						margin: 0;
						font-family: 'Quicksand', sans-serif;
						background-color: #f7f8fa;
					}
	
					.login-container {
						display: flex;
						min-height: 100vh;
					}
	
					.left-section {
						background-color: #4CAF50; /* Use the green color in the image */
						flex: 1;
						display: flex;
						justify-content: center;
						align-items: center;
						border-top-right-radius: 100px;
					}
	
					.right-section {
						background-color: #fff;
						flex: 1;
						display: flex;
						justify-content: center;
						align-items: center;
						padding: 20px;
					}
	
					.login-form {
						max-width: 400px;
						width: 100%;
					}
	
					.logo {
						text-align: center;
						margin-bottom: 20px;
					}
	
					.logo img {
						max-height: 80px;
					}
	
					.form-control {
						border-radius: 20px;
						margin-bottom: 10px;
						padding: 10px;
						width: 100%;
						font-size: 16px;
					}
	
					.btn-primary {
						display: block;
						width: 100%;
						border-radius: 20px;
						background-color: #4CAF50;
						color: #fff;
						font-size: 16px;
						padding: 10px;
					}
	
					.extra-links {
						font-size: 14px;
						text-align: center;
						margin-top: 10px;
					}
	
					.extra-links a {
						color: #4CAF50;
						text-decoration: none;
					}
				</style>
				<script>
					setTimeout(() => {
						document.querySelector('footer').style.display='none';
					}, 100);
					document.querySelector('header').style.display='none';
				</script>
				<div class="left-section">
					<!-- Replace with actual image in the final implementation -->
					<div>
						<!-- <img src="/login_theme/static/description/dakupentas.png" alt="Logo" style="height: 200px;"/> -->
							<p style="color: rgb(255, 255, 255); text-align: center; letter-spacing: 1.5px; font-size: 50px;">D P M P T S P</p>
							<p style="color: rgb(255, 255, 255); text-align: center; letter-spacing: 1.5px; font-size: 30px;">Kabupaten Balangan</p>
							<!-- <p style="color: white; text-align: center; letter-spacing: 1.5px; font-size: 20px;">D A K U P E N T A S</p> -->
					</div>
				</div>
	
				<div class="right-section">
					<div class="login-form">
						<div class="logo">
							<p style="color: rgb(26, 145, 26); text-align: center; letter-spacing: 1.5px; font-size: 30px;">D A K U P E N T A S</p>
						</div>
						<p class="alert alert-danger" t-if="error" role="alert">
							<t t-esc="error"/>
						</p>
						<p class="alert alert-success" t-if="message" role="status">
							<t t-esc="message"/>
						</p>
						<form method="post" action="/web/login">
							<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
							
							<input type="text" name="login" placeholder="Username" class="form-control" />
							<input type="password" name="password" placeholder="Password" class="form-control" />
							
							<button type="submit" class="btn btn-primary">Log in</button>
						</form>
						
						<div class="extra-links">
							<a href="/web/reset_password">Reset Password</a>
						</div>
					</div>
				</div>
			</div>
		</t>
	</template>

</odoo>